# =============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS (SUPABASE)
# =============================================================================
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=[YOUR-ANON-KEY]
SUPABASE_SERVICE_ROLE_KEY=[YOUR-SERVICE-ROLE-KEY]

# =============================================================================
# AUTENTICAÇÃO E JWT
# =============================================================================
JWT_SECRET=[YOUR-JWT-SECRET-MIN-32-CHARS]
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=[YOUR-NEXTAUTH-SECRET]

# =============================================================================
# CACHE REDIS (UPSTASH)
# =============================================================================
UPSTASH_REDIS_REST_URL=https://[YOUR-REDIS-URL].upstash.io
UPSTASH_REDIS_REST_TOKEN=[YOUR-REDIS-TOKEN]

# =============================================================================
# E-MAIL (RESEND)
# =============================================================================
RESEND_API_KEY=[YOUR-RESEND-API-KEY]
RESEND_FROM_EMAIL=noreply@seudominio.com

# =============================================================================
# PAGAMENTOS (OPCIONAL - FEATURE FLAG)
# =============================================================================
# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=[YOUR-MP-ACCESS-TOKEN]
MERCADO_PAGO_WEBHOOK_SECRET=[YOUR-MP-WEBHOOK-SECRET]

# Stripe (alternativa)
STRIPE_SECRET_KEY=[YOUR-STRIPE-SECRET-KEY]
STRIPE_WEBHOOK_SECRET=[YOUR-STRIPE-WEBHOOK-SECRET]
STRIPE_PUBLISHABLE_KEY=[YOUR-STRIPE-PUBLISHABLE-KEY]

# =============================================================================
# CONFIGURAÇÕES DA APLICAÇÃO
# =============================================================================
APP_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:8787
TIMEZONE=America/Sao_Paulo
DEFAULT_LOCALE=pt-BR
NODE_ENV=development

# =============================================================================
# CLOUDFLARE WORKERS (PRODUÇÃO)
# =============================================================================
# Estas variáveis são configuradas no Cloudflare Dashboard
# ou via wrangler.toml
CLOUDFLARE_ACCOUNT_ID=[YOUR-CF-ACCOUNT-ID]
CLOUDFLARE_API_TOKEN=[YOUR-CF-API-TOKEN]

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_PAYMENTS=false
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=true

# =============================================================================
# LIMITES E CONFIGURAÇÕES
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
CACHE_TTL_SECONDS=120
MAX_FILE_SIZE_MB=5

# =============================================================================
# LOGS E MONITORAMENTO
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=[YOUR-SENTRY-DSN]
